<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/listaIteracoesUsuarioImage"
        android:layout_width="50dp"
        android:layout_height="75dp"
       android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp" />

    <ImageView
        android:id="@+id/listaIteracoesLivroImage"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/listaIteracoesTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="User Name"
        android:textColor="@color/colorAccent"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/listaIteracoesUsuarioImage"
        android:layout_toLeftOf="@id/listaIteracoesLivroImage"
        android:textAlignment="center"
       />








</RelativeLayout>
